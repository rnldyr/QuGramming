<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ApplicationText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="llMainMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="cvMainMenu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">2dp</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
    </style>

    <style name="cvMainMenu.Pink" parent="cvMainMenu">
        <item name="elevationOverlayColor">#FF5EA2</item>
    </style>

    <style name="cvMainMenu.Blue" parent="cvMainMenu">
        <item name="elevationOverlayColor">#6C50EC</item>
    </style>

    <style name="cvQuizAnswer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="contentPadding">10dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">8dp</item>
        <item name="cardCornerRadius">10dp</item>
    </style>

    <style name="btnGreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="cornerRadius">20dp</item>
        <item name="backgroundTint">#00C853</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ivChooseTopicMainMenu">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="tvChooseTopicMainMenu" parent="ApplicationText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="tvChooseQuizAnswer" parent="ApplicationText">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#1F6BB8</item>
    </style>

    <style name="ivQuizHeader">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
</resources>